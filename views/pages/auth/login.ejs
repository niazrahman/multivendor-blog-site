<%- include('../../partials/head.ejs') %>

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
           <div class="card card-body">
            <h4 class="mb-3">Signin to Your Account</h4>
            <form action="/auth/login" method="POST">

                <div class="form-group">
                    <lebel for="email">Enter Your Valid Email</lebel>
                    <input type="email" name = "email" id="email" class="form-control <%=error.email ? 'is-invalid' : ''%>">
                    <div class="invalid-feedback">
                        <%=error.email && error.email %>
                    </div>
                </div>
                
                <div class="form-group">
                    <lebel for="password">Enter A Strong Password</lebel>
                    <input type="password" name = "password" id="password" class="form-control  <%=error.password ? 'is-invalid' : ''%>">
                    <div class="invalid-feedback">
                        <%=error.password && error.password %>
                    </div>
                </div>

                <input type="submit" class="btn btn-primary" value="Login">
                <%if(isLoggedIn){ %>
                        <a href="logout" class="btn btn-danger">Logout</a>
                    <% } %>
            </form>
            <a href="/auth/signup" class="my-3 text-center">Don't have an Account? Create One</a>
           </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>
</body>
</html>